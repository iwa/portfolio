---
const projects = [{ name: "ahahah", image: "", link: "" }];
---

<section
    class="grid grid-cols-2 md:grid-cols-3 gap-4 my-8 max-w-5xl mx-auto"
    style="min-height: 300px"
>
    {
        projects.map((item, index) => (
            <div class="relative row-span-2 shadow-sm md:shadow-2xl">
                <img
                    class="rounded object-cover w-full h-full"
                    loading="lazy"
                    src={ item.image }
                />
                <div class="absolute top-0 left-0 rounded w-full h-full bg-black bg-opacity-30 grid place-items-center opacity-0 hover:opacity-100 transition-opacity duration-200">
                    <a
                        class="px-6 py-2 rounded-full bg-black text-white"
                        href={ item.link }
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        { item.name }
                    </a>
                </div>
            </div>
        ))
    }
</section>
